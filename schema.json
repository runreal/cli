{
  "type": "object",
  "properties": {
    "$schema": {
      "description": "Runreal JSON-Schema spec version",
      "type": "string"
    },
    "engine": {
      "type": "object",
      "properties": {
        "path": {
          "description": "Path to the engine folder",
          "type": "string"
        },
        "repoType": {
          "description": "git or perforce",
          "type": "string"
        },
        "gitSource": {
          "description": "git source repository",
          "type": "string"
        },
        "gitBranch": {
          "description": "git branch to checkout",
          "type": "string"
        },
        "gitDependenciesCachePath": {
          "description": "Path to git dependencies cache folder <RUNREAL_GIT_DEPENDENCIES_CACHE_PATH>",
          "type": "string"
        }
      },
      "required": []
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Project name",
          "type": "string"
        },
        "path": {
          "description": "Path to the project folder <RUNREAL_PROJECT_PATH>",
          "type": "string"
        },
        "buildPath": {
          "description": "Path to the build folder <RUNREAL_BUILD_PATH>",
          "type": "string"
        },
        "repoType": {
          "description": "git or perforce",
          "type": "string"
        }
      },
      "required": []
    },
    "build": {
      "type": "object",
      "properties": {
        "id": {
          "description": "Build id <RUNREAL_BUILD_ID>",
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "Workflow id",
            "type": "string",
            "format": "regex",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9\\-]*$"
          },
          "name": {
            "description": "Workflow name",
            "type": "string"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "description": "Command to execute",
                  "type": "string"
                },
                "args": {
                  "description": "Command arguments",
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "condition": {
                  "type": "string",
                  "description": "Condition to execute the step"
                }
              },
              "required": [
                "command"
              ]
            }
          }
        },
        "required": [
          "name",
          "steps"
        ]
      }
    }
  },
  "required": [
    "project"
  ]
}